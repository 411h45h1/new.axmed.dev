---
// Dock Component
const dockApps = [
  {
    id: "notes",
    label: "About Me",
    ariaLabel: "Open About Me",
    icon: `
      <rect x="8" y="8" width="48" height="48" rx="8" fill="#ffcc02" />
      <rect x="16" y="20" width="32" height="4" rx="2" fill="#333" />
      <rect x="16" y="30" width="24" height="4" rx="2" fill="#555" />
      <rect x="16" y="40" width="18" height="4" rx="2" fill="#777" />
    `,
  },
  {
    id: "briefcase",
    label: "Experience",
    ariaLabel: "Open Experience",
    icon: `
      <rect x="8" y="8" width="48" height="48" rx="10" fill="#e67e22" />
      <rect x="16" y="28" width="32" height="20" rx="2" fill="white" />
      <rect x="20" y="20" width="24" height="8" rx="2" fill="white" />
      <path d="M28 20 V16 A4 4 0 0 1 36 16 V20" stroke="#e67e22" stroke-width="2" fill="none" />
    `,
  },
  {
    id: "browser",
    label: "Projects",
    ariaLabel: "Open Projects",
    icon: `
      <rect x="8" y="8" width="48" height="48" rx="10" fill="#0a84ff" />
      <path fill-rule="evenodd" clip-rule="evenodd" d="M14 18C14 16.8954 14.8954 16 16 16H30C31.1046 16 32 16.8954 32 18V20H48V42C48 43.1046 47.1046 44 46 44H18C16.8954 44 16 43.1046 16 42V38H14V18ZM18 38V42H46V22H32V20H18V38Z" fill="white"/>
    `,
  },
  {
    id: "terminal",
    label: "Skills",
    ariaLabel: "Open Skills",
    icon: `
      <rect x="8" y="8" width="48" height="48" rx="10" fill="#1e1e1e" />
      <path stroke="#39ff14" stroke-width="4" stroke-linecap="round" d="M20 24 L30 32 L20 40" />
      <path stroke="#39ff14" stroke-width="4" stroke-linecap="round" d="M34 40 H44" />
    `,
  },
  {
    id: "about",
    label: "Contact",
    ariaLabel: "Open Contact",
    icon: `
      <rect x="8" y="8" width="48" height="48" rx="10" fill="#8e44ad" />
      <path d="M16 20H48V38H16L16 20Z" fill="white" />
      <path d="M16 20L32 32L48 20" stroke="#8e44ad" stroke-width="4" stroke-linejoin="round" stroke-linecap="round" fill="none" />
    `,
  },
];
---

<div id="dock-wrapper" aria-label="Application Dock">
  <nav id="dock" role="navigation">
    {
      dockApps.map((app) => (
        <button
          class="dock-item"
          data-app={app.id}
          aria-label={app.ariaLabel}
          tabindex="0"
        >
          <svg viewBox="0 0 64 64" aria-hidden="true" set:html={app.icon} />
          <span class="dock-label">{app.label}</span>
          <div class="dock-indicator" />
        </button>
      ))
    }
  </nav>
</div>

<script>
  import "../scripts/dock.js";
</script>
