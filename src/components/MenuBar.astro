    <span class="status-icon" aria-label="Battery" title="Battery">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="1em"
        height="1em"
        fill="currentColor"
        stroke="currentColor"
        stroke-width="0"
        aria-hidden="true"
        viewBox="0 0 20 20"
        ><path
          stroke="none"
