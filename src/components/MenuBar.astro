<header id="menubar" role="menubar" aria-label="Desktop menu bar">
  <div class="left">
    <span class="app-name" tabindex="0">Ahmed Ali</span>
    <span class="menu-item" data-app="notes" tabindex="0">About</span>
    <span class="menu-item" data-app="briefcase" tabindex="0">Experience</span>
    <span class="menu-item" data-app="browser" tabindex="0">Projects</span>
    <span class="menu-item" data-app="terminal" tabindex="0">Skills</span>
    <span class="menu-item" data-app="about" tabindex="0">Contact</span>
  </div>
  <div class="right">
    <button
      id="reset-windows-btn"
      class="reset-button faded"
      aria-label="Reset window positions"
      title="Reset window positions"
      tabindex="0"
    >
      <svg
        stroke="currentColor"
        fill="currentColor"
        stroke-width="0"
        viewBox="0 0 16 16"
        xmlns="http://www.w3.org/2000/svg"
