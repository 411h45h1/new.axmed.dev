<style>
  .contact-container {
    max-width: 680px;
    margin: 0 auto;
  }

  .contact-section {
    margin-bottom: 28px;
  }

  .contact-section h3 {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 8px;
    color: rgba(255, 255, 255, 0.92);
  }

  .contact-section p {
    color: rgba(255, 255, 255, 0.68);
    line-height: 1.5;
    margin-bottom: 16px;
  }

  .contact-info {
    list-style: none;
    padding-left: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 12px;
    margin-bottom: 8px;
  }

  .contact-info li {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 12px;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 8px;
    font-size: 14px;
    transition: all 150ms ease;
  }

  .contact-info li:hover {
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(255, 255, 255, 0.12);
  }

  .contact-info .icon {
    display: inline-flex;
    align-items: center;
    width: 18px;
    height: 18px;
    justify-content: center;
    flex-shrink: 0;
    font-size: 14px;
  }

  .contact-info strong {
    color: rgba(255, 255, 255, 0.5);
    font-weight: 500;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    min-width: 50px;
  }

  .contact-info a {
    color: #0a84ff;
    text-decoration: none;
    transition: color 150ms ease;
  }

  .contact-info a:hover {
    color: #409cff;
  }

  .divider {
    height: 1px;
    background: rgba(255, 255, 255, 0.08);
    margin: 24px 0;
  }

  .contact-form {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    padding: 20px;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
    margin-bottom: 12px;
  }

  .form-group {
    margin-bottom: 12px;
  }

  .form-group label {
    display: block;
    margin-bottom: 6px;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    font-size: 13px;
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 10px 12px;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 6px;
    color: rgba(255, 255, 255, 0.92);
    font-size: 14px;
    font-family: var(--font-stack);
    transition: all 150ms cubic-bezier(0.4, 0.2, 0.2, 1);
    box-sizing: border-box;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    background: rgba(255, 255, 255, 0.08);
    border-color: #0a84ff;
    box-shadow: 0 0 0 3px rgba(10, 132, 255, 0.12);
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: rgba(255, 255, 255, 0.35);
  }

  .form-group textarea {
    min-height: 100px;
    resize: vertical;
    line-height: 1.5;
    font-family: var(--font-stack);
  }

  .submit-button {
    width: 100%;
    padding: 10px 20px;
    background: #0a84ff;
    color: #ffffff;
    border: none;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 150ms cubic-bezier(0.4, 0.2, 0.2, 1);
    font-family: var(--font-stack);
    margin-top: 8px;
  }

  .submit-button:hover {
    background: #0071e3;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(10, 132, 255, 0.25);
  }

  .submit-button:active {
    transform: translateY(0);
    box-shadow: 0 2px 6px rgba(10, 132, 255, 0.2);
  }

  .submit-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
  }

  .form-status {
    margin-top: 12px;
    padding: 10px 14px;
    border-radius: 6px;
    font-size: 13px;
    text-align: center;
    display: none;
    font-weight: 500;
  }

  .form-status.success {
    display: block;
    background: rgba(52, 199, 89, 0.12);
    border: 1px solid rgba(52, 199, 89, 0.25);
    color: #34c759;
  }

  .form-status.error {
    display: block;
    background: rgba(255, 69, 58, 0.12);
    border: 1px solid rgba(255, 69, 58, 0.25);
    color: #ff453a;
  }

  .footer-note {
    margin-top: 20px;
    text-align: center;
    font-size: 13px;
    color: rgba(255, 255, 255, 0.5);
    font-style: italic;
  }

  @media (max-width: 767px) {
    .contact-info {
      grid-template-columns: 1fr;
      gap: 8px;
    }

    .contact-info li {
      padding: 12px;
    }

    .form-row {
      grid-template-columns: 1fr;
      gap: 12px;
    }

    .contact-form {
      padding: 16px;
      border-radius: 8px;
    }

    .form-group input,
    .form-group textarea {
      padding: 12px;
      font-size: 16px;
    }

    .form-group label {
      font-size: 13px;
    }

    .submit-button {
      padding: 12px 20px;
      font-size: 15px;
    }

    .contact-section h3 {
      font-size: 18px;
    }
  }

  @media (min-width: 768px) and (max-width: 1024px) {
    .contact-form {
      padding: 18px;
    }

    .form-row {
      gap: 10px;
    }
  }
</style>

