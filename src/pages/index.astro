---
import Layout from "../layouts/Layout.astro";
import Wallpaper from "../components/Wallpaper.astro";
import MenuBar from "../components/MenuBar.astro";
import Dock from "../components/Dock.astro";
import Window from "../components/Window.astro";
import AboutContent from "../components/windows/AboutContent.astro";
import ExperienceContent from "../components/windows/ExperienceContent.astro";
import ProjectsContent from "../components/windows/ProjectsContent.astro";
import SkillsContent from "../components/windows/SkillsContent.astro";
import ContactContent from "../components/windows/ContactContent.astro";
---

<Layout>
  <Wallpaper />

  <MenuBar />

  <Dock />

  <!-- Windows -->
  <Window
    appId="notes"
    title="About Me"
    initialStyle="left:160px; top:120px; width:420px; height:280px;"
    ariaLabel="Notes window"
  >
    <AboutContent />
  </Window>

  <Window
    appId="briefcase"
    title="Experience"
    initialStyle="left:240px; top:200px; width:520px; height:400px;"
    ariaLabel="Experience window"
  >
    <ExperienceContent />
  </Window>

  <Window
    appId="browser"
    title="Projects"
    initialStyle="left:620px; top:140px;"
    ariaLabel="Browser window"
  >
    <ProjectsContent />
  </Window>

  <Window
    appId="terminal"
    title="Skills & Tech Stack"
    initialStyle="left:340px; top:430px; width:560px; height:240px;"
    ariaLabel="Terminal window"
  >
    <SkillsContent />
  </Window>

  <Window
    appId="about"
    title="Contact"
    initialStyle="left:940px; top:260px; width:360px; height:220px;"
    ariaLabel="About window"
  >
    <ContactContent />
  </Window>

  <script>
    import "../scripts/windows/index.js";
    import "../scripts/main.js";
  </script>
</Layout>
